@model TrainHoppersTARpe23.Models.Powerups.PowerupCDDViewModel


<h1>@Html.DisplayFor(modle => Model.PowerUpName)</h1>
<div>
    <h4>The</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="ID" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ID)
        </div>
        <div class="form-group row">
            <label asp-for="PowerUpName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.PowerUpName)
        </div>
        <div class="form-group row">
            <label asp-for="PowerUpDescription" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.PowerUpDescription)
        </div>
        <div class="form-group row">
            <label asp-for="PowerupType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.PowerupType)
        </div>
        <div class="form-group row">
            <label asp-for="TotalUses" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TotalUses)
        </div>
        <div class="form-group row">
            <label asp-for="UsedTime" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.UsedTime)
        </div>
        <div>
            @foreach (var image in Model.Image)
            {
                <partial name="_Images" model="image"></partial>
            }
        </div>
    </dl>

    <a asp-action="Index" asp-controller="abilities" class="btn btn-secondary">Index</a>
</div>
